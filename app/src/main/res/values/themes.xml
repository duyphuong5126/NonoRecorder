<resources>
    <!-- Base application theme. -->
    <style name="Theme.NonoRecorder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryVariant">@color/greenPrimaryContainer</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purpleSecondary</item>
        <item name="colorSecondaryVariant">@color/purpleSecondaryContainer</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_200</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.NonoRecorder.Player" parent="Theme.NonoRecorder">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="playerDefaultCoverTint">@color/gray_500</item>
        <item name="playerControlComponentColor">@color/gray_900</item>
        <item name="backgroundColor">@color/white</item>
        <item name="buffered_color">@color/gray_200</item>
        <item name="played_color">@color/gray_700</item>
        <item name="scrubber_drawable">@drawable/ic_circle_solid_gray_24dp</item>
        <item name="unplayed_color">@color/gray_200</item>
    </style>
</resources>